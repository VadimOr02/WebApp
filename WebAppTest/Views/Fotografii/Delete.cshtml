@model BusinessLayer.Models.FotografiiViewModel

<h2>Confirmare Ștergere</h2>

<p>Ești sigur că vrei să ștergi această fotografie?</p>

<div>
    <h4>@Model.Nume_Fisier</h4>
    <p>@Model.Cale</p>
</div>

@using (Html.BeginForm("DeleteConf", "Fotografii", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Șterge</button>
    @Html.ActionLink("Renunță", "Index", null, new { @class = "btn btn-secondary" })
}